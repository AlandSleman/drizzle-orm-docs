---
import GuidesMap from "@components/layout/GuidesMap.astro";
import Breadcrumbs from "@components/layout/Breadcrumbs.astro";
import MeshLayout from "@/layouts/MeshLayout.astro";
---

<MeshLayout>
  <div class="frame__wrap">
    <div class="frame__column">
      <div class="learn__title-block">
        <Breadcrumbs
          crumbs={{
            Learn: "/learn",
          }}
        />
        <div class="guides_title">Guides</div>
        <div class="guides_description">
          Comprehensive collection of code samples and step-by-step walkthroughs
          for common tasks
        </div>
      </div>
      <div class="frame__empty-cell"></div>
    </div>
    <div class="frame__column--main-content">
      <div class="frame__main-content-cell">
        <div class="guides__selected-guides">
          <div class="guides__selected-guides__card">
            <div class="guides__selected-guides__card_title">Conditional filters in query</div>
            <div class="guides__selected-guides__card_description">
              This example demonstrates how to implement conditional filtering.
            </div>
            <a href="/learn/guides/queries/conditional-filters-in-query" class="guides__selected-guides__card_view">
              View <svg
                class="guides__selected-guides__card_arrow"
                width="20"
                height="20"
                viewBox="0 0 20 20"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  d="M4.1665 10H15.8332"
                  stroke="currentColor"
                  stroke-width="1.66667"
                  stroke-linecap="round"
                  stroke-linejoin="round"></path>
                <path
                  d="M10 4.16669L15.8333 10L10 15.8334"
                  stroke="currentColor"
                  stroke-width="1.66667"
                  stroke-linecap="round"
                  stroke-linejoin="round"></path>
              </svg>
            </a>
          </div>
          <div class="guides__selected-guides__card">
            <div class="guides__selected-guides__card_title">Counting Related Entities</div>
            <div class="guides__selected-guides__card_description">
              This example demonstrates how to count related entities.
            </div>
            <a href="/learn/guides/queries/counting-related-entities" class="guides__selected-guides__card_view">
              View <svg
                class="guides__selected-guides__card_arrow"
                width="20"
                height="20"
                viewBox="0 0 20 20"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  d="M4.1665 10H15.8332"
                  stroke="currentColor"
                  stroke-width="1.66667"
                  stroke-linecap="round"
                  stroke-linejoin="round"></path>
                <path
                  d="M10 4.16669L15.8333 10L10 15.8334"
                  stroke="currentColor"
                  stroke-width="1.66667"
                  stroke-linecap="round"
                  stroke-linejoin="round"></path>
              </svg>
            </a>
          </div>
          <div class="guides__selected-guides__card">
            <div class="guides__selected-guides__card_title">Incrementing a value</div>
            <div class="guides__selected-guides__card_description">
              This example demonstrates how to increment a value.
            </div>
            <a href="/learn/guides/queries/incrementing-a-value" class="guides__selected-guides__card_view">
              View <svg
                class="guides__selected-guides__card_arrow"
                width="20"
                height="20"
                viewBox="0 0 20 20"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  d="M4.1665 10H15.8332"
                  stroke="currentColor"
                  stroke-width="1.66667"
                  stroke-linecap="round"
                  stroke-linejoin="round"></path>
                <path
                  d="M10 4.16669L15.8333 10L10 15.8334"
                  stroke="currentColor"
                  stroke-width="1.66667"
                  stroke-linecap="round"
                  stroke-linejoin="round"></path>
              </svg>
            </a>
          </div>
        </div>
        <GuidesMap />
      </div>
      <div class="frame__empty-cell_wrap">
        <div class="frame__empty-cell--main-content--auto"></div>
      </div>
    </div>
  </div>
</MeshLayout>

<style>
  html.dark .guides_title {
    color: #e2e6f0;
  }

  .guides_title {
    color: #0f172a;
    margin-top: 8px;
    font-size: 32px;
    font-weight: 700;
    line-height: 48px;
    letter-spacing: -0.48px;
  }

  html.dark .guides_description {
    color: #f3f4f6;
  }

  .guides_description {
    color: #1e1e1e;
    font-size: 16px;
    font-weight: 400;
    letter-spacing: -0.176px;
    margin-top: 8px;
    line-height: 150%;
    opacity: 0.7;
    margin-bottom: 16px;
  }

  .guides__selected-guides {
    display: flex;
    gap: 12px;
    margin-top: 32px;
    margin-bottom: 40px;
  }

  html.dark .guides__selected-guides__card {
    border: 1px solid #303030;
    background: #171717;
  }

  .guides__selected-guides__card {
    flex: 1;
    display: flex;
    flex-direction: column;
    height: 150px;
    border-radius: 8px;
    border: 1px solid #e7ebef;
    background: #f3f7fd;
    padding: 20px 16px;
  }

  html.dark .guides__selected-guides__card_title {
    color: #e2e6f0;
  }

  .guides__selected-guides__card_title {
    color: #222124;
    font-size: 18px;
    font-weight: 600;
    line-height: 130%;
  }

  html.dark .guides__selected-guides__card_description {
    color: #e6e6e6;
  }

  .guides__selected-guides__card_description {
    color: #4b5563;
    font-size: 14px;
    font-weight: 400;
    line-height: 130%;
    margin-top: 8px;
  }

  html.dark .guides__selected-guides__card_view {
    color: #006be6;
  }

  .guides__selected-guides__card_view {
    display: flex;
    gap: 8px;
    color: #006adc;
    font-size: 16px;
    font-weight: 500;
    line-height: 130%;
    margin-top: auto;
    text-decoration: none;
  }

  .frame__wrap {
    width: 100%;
    min-height: calc(100vh - 104px);
    display: flex;
    flex-direction: column;
  }

  html.dark .frame__column {
    border-bottom: 1px solid #303030;
  }

  .frame__column {
    display: flex;
    justify-content: center;
    border-bottom: 1px solid #efefef;
  }

  html.dark .frame__empty-cell {
    border-left: 1px solid #303030;
    border-right: 1px solid #303030;
  }

  .frame__empty-cell {
    display: flex;
    justify-content: center;
    width: 334px;
    border-left: 1px solid #efefef;
    border-right: 1px solid #efefef;
    margin-right: 62px;
  }

  html.dark .learn__title-block {
    border-left: 1px solid #303030;
  }

  .learn__title-block {
    display: flex;
    flex-direction: column;
    max-width: 920px;
    width: 100%;
    margin-left: 128px;
    padding-left: 24px;
    padding-right: 72px;
    padding-top: 24px;
    flex-shrink: 0;
    border-left: 1px solid #efefef;
  }

  .frame__column--main-content {
    display: flex;
    justify-content: center;
    overflow-y: hidden;
    height: fit-content;
    min-height: 100%;
    flex: 1;
  }

  html.dark .frame__empty-cell--main-content--auto {
    border-left: 1px solid #303030;
    border-right: 1px solid #303030;
  }

  .frame__empty-cell--main-content--auto {
    height: auto;
    flex: 1 1 auto;
    border-left: 1px solid #efefef;
    border-right: 1px solid #efefef;
    height: auto;
  }

  .frame__empty-cell_wrap {
    display: flex;
    flex-direction: column;
    width: 334px;
    margin-right: 62px;
  }

  html.dark .frame__main-content-cell {
    border-left: 1px solid #303030;
  }

  .frame__main-content-cell {
    display: flex;
    flex-direction: column;
    max-width: 920px;
    width: 100%;
    margin-left: 128px;
    padding-left: 24px;
    padding-right: 72px;
    flex-shrink: 0;
    border-left: 1px solid #efefef;
  }
  @media (max-width: 767px) {
    html.dark .learn__title-block {
      border-left: none;
    }

    .learn__title-block {
      display: flex;
      flex-direction: column;
      max-width: 920px;
      width: 100%;
      margin: 0;
      padding: 0 16px;
      flex-shrink: 0;
      border-left: none;
    }
    .frame__empty-cell {
      display: none;
    }
    html.dark .guides_title {
      color: #e2e6f0;
    }

    .guides_title {
      color: #0f172a;
      margin-top: 8px;
      font-size: 24px;
      font-weight: 700;
      line-height: 48px;
      letter-spacing: -0.48px;
    }
    html.dark .guides_description {
      color: #f3f4f6;
    }

    .guides_description {
      color: #1e1e1e;
      font-size: 14px;
      font-weight: 400;
      letter-spacing: -0.176px;
      margin-top: 0px;
      line-height: 18.2px;
      opacity: 0.7;
      margin-bottom: 20px;
    }
    html.dark .frame__main-content-cell {
      border-left: none;
    }
    .frame__main-content-cell {
      display: flex;
      flex-direction: column;
      max-width: 920px;
      margin: 0;
      width: 100%;
      padding: 0 16px;
      flex-shrink: 0;
      border-left: none;
    }

    .frame__empty-cell_wrap {
      display: none;
    }
    .guides__selected-guides {
      display: flex;
      gap: 12px;
      margin-bottom: 32px;
      margin-top: 24px;
      flex-direction: column;
    }
    html.dark .guides__selected-guides__card_title {
      color: #e2e6f0;
    }

    .guides__selected-guides__card_title {
      color: #222124;
      font-size: 16px;
      font-weight: 600;
      line-height: 20.8px;
    }
    .guides__selected-guides__card_view {
      display: flex;
      gap: 8px;
      color: #006adc;
      font-size: 14px;
      font-weight: 500;
      line-height: 130%;
      margin-top: 20px;
      text-decoration: none;
      align-items: center;
    }
    .guides__selected-guides__card_arrow {
      height: 16px;
      width: 16px;
    }
  }
</style>
