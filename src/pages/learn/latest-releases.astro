---
import { getCollection } from "astro:content";
import Breadcrumbs from "@components/layout/Breadcrumbs.astro";
import MeshLayout from "@/layouts/MeshLayout.astro";

const articles = await getCollection("latest-releases");
const filteredArticles = articles.sort(
  (a, b) =>
    new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime(),
);

const options: Intl.DateTimeFormatOptions = {
  year: "numeric",
  month: "short",
  day: "numeric",
};
---

<MeshLayout>
  <div class="frame__wrap">
    <div class="frame__column">
      <div class="learn__title-block">
        <Breadcrumbs
          crumbs={{
            Learn: "/learn",
          }}
        />
        <div class="latest-releases_title">Latest Releases</div>
      </div>
      <div class="frame__empty-cell"></div>
    </div>
    <div class="frame__column--main-content">
      <div class="frame__main-content-cell">
        <div class="latest-updates__cards">
          {
            filteredArticles.map((update) => (
              <a
                href={`/learn/latest-releases/${update.slug}`}
                class="latest-updates__card"
              >
                <div class="latest-updates__card_title">
                  {update.data.title}
                </div>
                <div class="latest-updates__card_date">
                  {update.data.pubDate.toLocaleDateString("en-US", options)}
                </div>
                <div class="latest-updates__card_description">
                  {update.data.description}
                </div>
                <div class="latest-updates__card_link">Read more</div>
              </a>
            ))
          }
        </div>
      </div>
      <div class="frame__empty-cell_wrap">
        <div class="frame__empty-cell--main-content--auto"></div>
      </div>
    </div>
  </div>
</MeshLayout>

<style>
  html.dark .latest-releases_title {
    color: #e2e8f0;
  }

  .latest-releases_title {
    color: #0f172a;
    font-size: 32px;
    font-weight: 700;
    line-height: 48px;
    letter-spacing: -0.48px;
    margin-bottom: 16px;
    margin-top: 8px;
  }

  .latest-updates__cards {
    display: flex;
    flex-direction: column;
    gap: 16px;
    margin-top: 24px;
    width: 100%;
    padding-bottom: 120px;
  }

  html.dark .latest-updates__card {
    background-color: #171717;
    border: 1px solid #303030;
  }

  .latest-updates__card {
    padding: 24px;
    border-radius: 8px;
    border: 1px solid #e6e6e6;
    background: #fff;
    line-height: normal;
    text-decoration: none;
  }

  html.dark .latest-updates__card_title {
    color: #e2e8f0;
  }

  .latest-updates__card_title {
    color: #222124;
    font-size: 18px;
    font-weight: 600;
    letter-spacing: -0.198px;
  }

  html.dark .latest-updates__card_date {
    color: #e6e6e6;
  }

  .latest-updates__card_date {
    color: #7e868c;
    font-size: 12px;
    font-weight: 400;
    letter-spacing: -0.132px;
    margin-top: 8px;
  }

  html.dark .latest-updates__card_description {
    color: #f3f4f6;
  }

  .latest-updates__card_description {
    color: #5f5f61;
    font-size: 16px;
    font-weight: 400;
    letter-spacing: -0.176px;
    margin-top: 16px;
  }

  .frame__wrap {
    width: 100%;
    height: auto;
    display: flex;
    flex-direction: column;
  }

  html.dark .frame__column {
    border-bottom: 1px solid #303030;
  }

  .frame__column {
    display: flex;
    justify-content: center;
    border-bottom: 1px solid #efefef;
  }

  html.dark .frame__empty-cell {
    border-left: 1px solid #303030;
    border-right: 1px solid #303030;
  }

  .frame__empty-cell {
    display: flex;
    justify-content: center;
    width: 334px;
    border-left: 1px solid #efefef;
    border-right: 1px solid #efefef;
    margin-right: 62px;
  }

  html.dark .learn__title-block {
    border-left: 1px solid #303030;
  }

  .learn__title-block {
    display: flex;
    flex-direction: column;
    max-width: 920px;
    width: 100%;
    margin-left: 128px;
    padding-left: 24px;
    padding-right: 72px;
    padding-top: 24px;
    flex-shrink: 0;
    border-left: 1px solid #efefef;
  }

  .frame__column--main-content {
    display: flex;
    justify-content: center;
    overflow-y: hidden;
    height: fit-content;
    min-height: 100%;
  }

  html.dark .frame__empty-cell--main-content--auto {
    border-left: 1px solid #303030;
    border-right: 1px solid #303030;
  }

  .frame__empty-cell--main-content--auto {
    height: auto;
    flex: 1 1 auto;
    border-left: 1px solid #efefef;
    border-right: 1px solid #efefef;
  }

  .frame__empty-cell_wrap {
    display: flex;
    flex-direction: column;
    width: 334px;
    margin-right: 62px;
  }

  html.dark .frame__main-content-cell {
    border-left: 1px solid #303030;
  }

  .frame__main-content-cell {
    display: flex;
    flex-direction: column;
    max-width: 920px;
    width: 100%;
    margin-left: 128px;
    padding-left: 24px;
    padding-right: 72px;
    flex-shrink: 0;
    border-left: 1px solid #efefef;
  }
  .latest-updates__card_link {
    display: none;
  }
  @media (max-width: 767px) {
    .latest-releases_title {
      color: #303030;
      font-size: 24px;
      font-weight: 700;
      letter-spacing: -0.48px;
      line-height: 31.2px;
    }
    .latest-updates__card_link {
      display: flex;
      margin-top: 8px;
      font-weight: 400;
      font-size: 14px;
      line-height: 16.71px;
    }
    .learn__description {
      color: #303030;
      font-size: 14px;
      font-weight: 400;
      line-height: 18.2px;
      letter-spacing: -0.5px;
      margin-top: 8px;
    }
    .learn__buttons {
      display: flex;
      gap: 12px;
      margin-bottom: 32px;
      margin-top: 24px;
      flex-direction: column;
    }
    .learn__button--primary {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 100%;
      height: 36px;
      border-radius: 4px;
      border: 1px solid #e7ebef;
      font-size: 12px;
      font-weight: 500;
      text-decoration: none;
      line-height: 15.6px;
      color: #222124;
      cursor: pointer;
    }
    html.dark .learn__title-block {
      border-left: none;
    }
    .learn__title-block {
      display: flex;
      flex-direction: column;
      max-width: 920px;
      width: 100%;
      margin: 0;
      padding: 0 16px;
      flex-shrink: 0;
      border: none;
    }
    .frame__empty-cell {
      display: none;
    }
    html.dark .frame__main-content-cell {
      border-left: none;
    }
    .frame__main-content-cell {
      display: flex;
      flex-direction: column;
      max-width: 920px;
      margin: 0;
      width: 100%;
      padding: 0 16px 0;
      flex-shrink: 0;
      border-left: none;
    }
    .frame__empty-cell_wrap {
      display: none;
    }
    html.dark .learn__migrate-from_title {
      color: #e2e8f0;
    }
    .learn__migrate-from_title {
      color: #303030;
      font-size: 20px;
      font-weight: 600;
      line-height: 26px;
      letter-spacing: -0.48px;
    }
    .latest-updates__card_title {
      color: #222124;
      font-size: 16px;
      font-weight: 600;
      letter-spacing: -1.1%;
      line-height: 19.09px;
    }
    .latest-updates__card_description {
      color: #5f5f61;
      font-size: 14px;
      font-weight: 400;
      letter-spacing: -0.176px;
      margin-top: 16px;
      overflow: hidden;
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      text-overflow: ellipsis;
    }
    .latest-updates__cards {
      display: flex;
      flex-direction: column;
      gap: 16px;
      margin-top: 24px;
      width: 100%;
      padding-bottom: 52px;
    }
  }
</style>
