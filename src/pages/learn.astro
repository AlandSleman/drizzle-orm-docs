---
import MeshLayout from "@/layouts/MeshLayout.astro";
import LatestUpdates from "@components/layout/LatestUpdates.astro";
import LearnMigrateFromCards from "@components/layout/LearnMigrateFromCards.astro";
import LearnTutorialCards from '@components/layout/LearnTutorialCards.astro';
---

<MeshLayout>
  <div class="frame__wrap">
    <div class="frame__column">
      <div class="learn__title-block">
        <div class="learn__title">Learn with Drizzle</div>
        <div class="learn__description">
          Unlock the power of Drizzle ORM with concise tutorials.<br /> Master
          efficient database interactions for streamlined development.
        </div>
        <div class="learn__buttons">
          <a href="/learn/guides" class="learn__button--primary">Guides</a>
          <a href="/learn/tutorials" class="learn__button--primary">
            Tutorials</a
          >
          <a href="/learn/latest-releases" class="learn__button--primary">
            Latest Releases</a
          >
        </div>
      </div>
      <div class="frame__empty-cell"></div>
    </div>
    <div class="frame__column--main-content">
      <div class="frame__main-content-cell">
        <div class="learn__migrate-from">
          <div class="learn__migrate-from_title">Migrate to Drizzle</div>
          <LearnMigrateFromCards />
          <div class="learn__migrate-from_title">Tutorials</div>
          <LearnTutorialCards />
          <LatestUpdates />
        </div>
      </div>
      <div class="frame__empty-cell_wrap">
        <div class="frame__empty-cell--main-content"></div>
        <div class="frame__empty-cell--main-content--auto"></div>
      </div>
    </div>
  </div>
</MeshLayout>

<style>
  .frame__wrap {
    width: 100%;
    height: auto;
    display: flex;
    flex-direction: column;
  }

  html.dark .frame__column {
    border-bottom: 1px solid #303030;
  }

  .frame__column {
    display: flex;
    justify-content: center;
    border-bottom: 1px solid #efefef;
  }

  html.dark .frame__empty-cell {
    border-left: 1px solid #303030;
    border-right: 1px solid #303030;
  }

  .frame__empty-cell {
    display: flex;
    justify-content: center;
    width: 334px;
    border-left: 1px solid #efefef;
    border-right: 1px solid #efefef;
    margin-right: 62px;
  }

  html.dark .learn__title-block {
    border-left: 1px solid #303030;
  }

  .learn__title-block {
    display: flex;
    flex-direction: column;
    max-width: 920px;
    width: 100%;
    margin-left: 128px;
    padding-left: 24px;
    padding-right: 72px;
    padding-top: 90px;
    flex-shrink: 0;
    border-left: 1px solid #efefef;
  }

  html.dark .learn__title {
    color: #e2e8f0;
  }

  .learn__title {
    color: #303030;
    font-size: 56px;
    font-weight: 700;
    letter-spacing: -0.48px;
  }

  html.dark .learn__description {
    color: #e2e8f0;
  }

  .learn__description {
    color: #303030;
    font-size: 24px;
    font-weight: 400;
    line-height: 36px;
    letter-spacing: -0.5px;
    margin-top: 8px;
  }

  .learn__buttons {
    display: flex;
    margin-top: 40px;
    margin-bottom: 32px;
    gap: 16px;
  }

  html.dark .learn__button--primary {
    border: 1px solid #fff;
    color: #e2e8f0;
  }

  .learn__button--primary {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 186px;
    height: 48px;
    border-radius: 4px;
    border: 1px solid #e7ebef;
    font-size: 16px;
    font-weight: 500;
    text-decoration: none;
    color: #222124;
    cursor: pointer;
  }

  .frame__column--main-content {
    display: flex;
    justify-content: center;
    overflow-y: hidden;
    height: fit-content;
    min-height: 100%;
  }

  html.dark .frame__empty-cell--main-content {
    border-left: 1px solid #303030;
    border-right: 1px solid #303030;
    border-bottom: 1px solid #303030;
  }

  .frame__empty-cell--main-content {
    border-left: 1px solid #efefef;
    border-right: 1px solid #efefef;
    border-bottom: 1px solid #efefef;
    height: 730px;
  }

  html.dark .frame__empty-cell--main-content--auto {
    border-left: 1px solid #303030;
    border-right: 1px solid #303030;
  }

  .frame__empty-cell--main-content--auto {
    height: 100%;
    flex: 1 1 auto;
    border-left: 1px solid #efefef;
    border-right: 1px solid #efefef;
  }

  .frame__empty-cell_wrap {
    display: flex;
    flex-direction: column;
    width: 334px;
    margin-right: 62px;
  }

  html.dark .frame__main-content-cell {
    border-left: 1px solid #303030;
  }

  .frame__main-content-cell {
    display: flex;
    flex-direction: column;
    max-width: 920px;
    width: 100%;
    margin-left: 128px;
    padding-left: 24px;
    padding-top: 56px;
    padding-right: 72px;
    flex-shrink: 0;
    border-left: 1px solid #efefef;
  }

  .learn__migrate-from {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  html.dark .learn__migrate-from_title {
    color: #e2e8f0;
  }

  .learn__migrate-from_title {
    color: #303030;
    font-size: 24px;
    font-weight: 600;
    line-height: 130%;
    letter-spacing: -0.48px;
  }
  @media (max-width: 767px) {
    .learn__title {
      color: #303030;
      font-size: 24px;
      font-weight: 700;
      letter-spacing: -0.48px;
    }
    .learn__description {
      color: #303030;
      font-size: 14px;
      font-weight: 400;
      line-height: 18.2px;
      letter-spacing: -0.5px;
      margin-top: 8px;
    }
    .learn__buttons {
      display: flex;
      gap: 12px;
      margin-bottom: 32px;
      margin-top: 24px;
      flex-direction: column;
    }
    .learn__button--primary {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 100%;
      height: 36px;
      border-radius: 4px;
      border: 1px solid #e7ebef;
      font-size: 12px;
      font-weight: 500;
      text-decoration: none;
      line-height: 15.6px;
      color: #222124;
      cursor: pointer;
    }
    html.dark .learn__title-block {
      border-left: none;
    }
    .learn__title-block {
      display: flex;
      flex-direction: column;
      max-width: 920px;
      width: 100%;
      margin: 0;
      padding: 72px 16px 0;
      flex-shrink: 0;
      border: none;
    }
    .frame__empty-cell {
      display: none;
    }
    html.dark .frame__main-content-cell {
      border-left: none;
    }
    .frame__main-content-cell {
      display: flex;
      flex-direction: column;
      max-width: 920px;
      margin: 0;
      width: 100%;
      padding: 48px 16px 0;
      flex-shrink: 0;
      border-left: none;
    }
    .frame__empty-cell_wrap {
      display: none;
    }
    html.dark .learn__migrate-from_title {
      color: #e2e8f0;
    }
    .learn__migrate-from_title {
      color: #303030;
      font-size: 20px;
      font-weight: 600;
      line-height: 26px;
      letter-spacing: -0.48px;
    }
  }
</style>
