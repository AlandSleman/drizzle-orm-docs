<script is:inline>
  // Init expand-collapse component
  const expandBtns = document.querySelectorAll("[data-expand-btn]");

  expandBtns.forEach((expandBtn) => {
    expandBtn.addEventListener("click", () => {
      if (expandBtn.textContent === "Expand") {
        expandBtn.parentElement.style.height =
          expandBtn.parentElement.scrollHeight + "px";
        expandBtn.textContent = "Collapse";
      } else {
        expandBtn.parentElement.style.height = "300px";
        expandBtn.textContent = "Expand";
      }
      expandBtn.classList.toggle("collapse-code-block-btn");
      expandBtn.classList.toggle("expand-code-block_btn");
    });
  })

</script>
